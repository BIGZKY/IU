/**index.wxss**/
page{
  background: #f2f2f2;
  font-family: "微软雅黑";
  color: #333;

}
text,view{
  font-size: 26rpx;
}
.fl{
  float: left;
}
.fr{
  float: right;
  color: #888;
}
.lists{
  padding: 20rpx 25rpx;
  margin-bottom: 100rpx;
  box-sizing: border-box;
}
.list{
  width: 100%;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10rpx;
  padding-bottom: 12rpx;
}
.list::after{
   clear: both;
  content: ".";
  display: block;
   overflow: hidden;
    font-size: 0;
    height: 0;
}
.top{
  border-bottom: 1px solid #f2f2f2;
  font-size:30rpx;
  padding-bottom: 10px;
}
.pro{
  width: 50%;
  font-size: 30rpx;
  margin-top: 10rpx;
  text-align: left;
}
.account{
  width: 20%;
  font-size: 30rpx;
  margin-top: 10rpx;
  text-align: left;
}
.zongjia{
  width: 30%;
  font-size: 30rpx;
  margin-top: 10rpx;
  text-align: left;
}
.spe{
  font-size: 32rpx;
}
.buy_list{
  padding-bottom: 20rpx;
  height: auto;
  /* border-bottom:1px solid #f2f2f2; */
  /* max-height: 164px;
  overflow: hidden; */
}
.zhifu{
  text-align: right;
  color: #222;
  font-size: 28rpx;
  padding: 10rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2;
  line-height: 65rpx;
}
.page-section-title{
  line-height: 45rpx;    
  margin: 20rpx 0;
}
.page-section-title text{
   
    font-size: 28rpx;
}
.btn{
  width: 140rpx;
  background: #06bebc;
  border-radius: 30rpx;
  color: #fff;
  font-size: 28rpx;
  text-align:center;
  line-height:60rpx;
  float: right;
  margin-top: 12rpx;
}

.buy{
  display: flex;
  justify-content: space-between;
}
.buy>view{
  width: 33.33%;
  text-align: center;
  line-height: 1.8;
}
.googs>view{
  font-size: 28rpx;
  color:#888;
}
.details{
  font-size: 28rpx;
  line-height: 2;
}
.word{
  text-indent:2em;
  margin: 10rpx 0;
  line-height: 1.8;
  color: #888;
  font-size: 28rpx;
}

.yijian{
  position: fixed;
  width: 100%;
  height: 120rpx;
  left: 0;
  bottom: 0;
  background: #fff;
}
.yijian button{
  width: 80%;
  margin-top: 15rpx;
  background: #06bebc;
  color: #fff;
}
.more{
  width: 65px;
  margin: 0 auto;
  line-height: 45rpx;
  border: 1px solid #f2f2f2;
  text-align: center;
  margin-top: -1px;
  border-top: none;
  background: #fff;
}