/* pages/coupons/coupons.wxss */
page{
  padding-bottom: 70px;
}
.daipaoka{
 
  width: 700rpx;
  height: 175px;
  margin: 0 auto;
  box-sizing: border-box;
}
.daipaoka image{
  width:100%;
  height: 350rpx;
}
.youhui{
  padding: 0 20rpx; 
  box-sizing: border-box;
  margin-top:30rpx;
  flex-wrap: wrap;
}

.desc{
  margin-left: 25rpx;
  margin-right: 25rpx;
  font-size: 26rpx;
}
.title{
  font-size: 32rpx;
  color: #222;
  line-height: 80rpx;
  text-align: center;
}
.text{
  color: #888;
  line-height: 1.6;
  margin-bottom:2px;

}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  background-color: #06bebc;
  color: white;
  line-height: 98rpx;
  text-align: center;
  letter-spacing: 6px;
  font-size: 32rpx;
}
.coupon{
  position: relative;
  display: inline-block;
  margin-bottom: 25rpx; 
  width: 340rpx;
  height: 113rpx;
  background: white;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  font-size: 24rpx;

}
.price{
  margin-left: 25rpx;
  font-size: 28rpx;
  color: #555;
}
.days{
  position: absolute;
  top:70rpx;
  left: 25rpx;
  color: #555;
}
.zf{
  position: absolute;
  top:70rpx;
  right: 25rpx;
  color: #888;
  
}
.floor{
  margin-top:15rpx;

}
.prev{

  /* position: relative;
  top:16rpx;
  left: 115rpx; */
  margin-left: 20rpx;
  color: #888;
  text-decoration:line-through;
}
.disc{
  position: absolute;
  top:16rpx;
  background-color: #fff;
  color: #555;
  right: 0;
  /* padding: 4rpx 10rpx; */
  width: 42px;
  text-align: center;
  border-top-left-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
  border: 1px solid #ccc;
  border-right:none;
}
.active{
   border: 1px solid #06bebc;
}
.active .price{
  color: #e84f32;
}
.active .disc{
  border-color:  #06bebc;
  color: #06bebc;
}
.active .icon_selected{
  display: block;
}
.icon_selected{
  height:40rpx;
  width:40rpx;
  position:absolute;
  bottom:-1px;
  right:-1px;
  display: none;
}

.time{
  width:90%;
  margin: 25rpx auto;
  padding: 20rpx;
  padding-bottom: 30rpx;
  border-bottom:1px solid #e2e2e2;
}
/* 公告说明 */
.showGG{
  height: 270px;
  width: 260px;
  position: fixed;
  left: 50%;
  top: 50%;
  margin-left: -130px;
  margin-top: -135px;
  background: #fff;
  border-radius: 15rpx;
  z-index: 999;
  opacity:0;
  box-sizing: border-box;
  padding: 30px;
}

.closeGG{
  position: absolute;
  top: 5rpx;
  right: 8rpx;
}
.troGG{
  color:#222;
  text-align:center;
  position:absolute;
  top:36px;
  left:50%;
  font-size:32rpx;
  display: inline-block;
  margin: 0 auto;
  transform: translateX(-50%);
}
.troGG-contentWrap{
  margin-top:55px;
}
.troGG-contentWrap>view{
  margin-top: 20rpx;
  justify-content: space-between;

}
.troGG-contentWrap>view text{
  color: #555;
  font-size: 28rpx;
}