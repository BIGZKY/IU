page{
  background: #f2f2f2;
}
.item{
  width: 92%;
  margin: 0 auto;
  background: #fff;
  margin-top: 25rpx;
}
.pic image{
  height: 94px;
  width: 94px;
}
.pic{
  margin-right: 25rpx;
  box-sizing: border-box;
  padding: 5rpx 0 5rpx 5rpx;
}
.describe{
  height: 100%;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx 0;
  align-items: flex-start;
  padding-right: 20rpx;
}
.title{
  font-size: 30rpx;
  font-weight: bold;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  height: 40px;
}
.detail{
  color: #555;
  font-size: 26rpx;
}
.time{
  color: #888;
  width: 100%;
  border-top: 1px solid #d2d2d2;
  margin-top: 5rpx;
}