page{
  background: #f2f2f2;
  font-family: "微软雅黑";
}
.top{
  width: 100%;
  height: 135px;
  overflow:hidden;
  padding-left: 25rpx;
  box-sizing: border-box;
}
.tx{
  width:105rpx;
  height:105rpx;
  border-radius:50%;
  background: #fff;
  padding:3px;

}
.tx image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.name{
  text-align: left;
  margin-left: 40rpx;

}
.name text{
  font-family: "微软雅黑";

  font-size: 32rpx;
  color: #fff;
}
.flex-wrp{
  display: flex;
  width: 100%;
  height:95rpx;
  background: #fff;
}
.flex-item{
  width: 50%;
  box-sizing: border-box;
  text-align: center;
  padding: 20rpx;
}
.flex-item image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 25rpx;
  position: relative;
  /* top: 15rpx; */
}
.flex-item text{
  font-size:28rpx; 
  display: inline-block;
  line-height: 80rpx;
}
.infos{
  /* margin-top: 20rpx; */
  /* padding: 0 0 0 40rpx; */
  background: #fff;
}
.info{
  width: 100%;
  background: #fff;
  padding: 14rpx 0;
  border-bottom: 1px solid #f2f2f2;
  font-size: 30rpx;
  margin-left: 40rpx;
}
.info image{
  width: 46rpx;
  height: 46rpx;
  margin-right: 25rpx;
}
.info text{
  font-size:30rpx; 
  display: inline-block;
  line-height: 65rpx;

}
.userType{
  height:38rpx;
  background:#000;
  margin-top:20rpx;
  width:168rpx;
