page{
  height: 100%;
  background: #f2f2f2;
}
.pinList{
  padding: 30rpx;
  box-sizing: border-box;
  padding-top: 20rpx;
}
.pinList>view{
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  position: relative;
}
.pinList>view>view:nth-child(1){
  font-size:30rpx;
  font-weight: 600;
}
.pinList>view>view:nth-child(2){
  font-size:22rpx;
  color:#888;
  margin-top: 2rpx;
  padding-left: 10px;
  position: relative;
}
.pinList>view>view:nth-child(2)::after{
  content: '';
  display: inline-block;
  height:4px;
  width: 4px;
  border-radius: 50%;
  position: absolute;
  left: 2px;
  background: #888;
  top: 6px;
}
.pruduct-list{
  margin-top: 20rpx;
  justify-content:space-start;

}
.product{
  width: 25%;
}

.product .name>text{
  font-size:24rpx;
  padding:4rpx 6rpx;
  color:#555;
  line-height:1.1;
  display:block;
  white-space:nowrap;

}
.product-img{
  height: 75px;
  width: 75px;
  display: block;
  background: #f2f2f2;
  /* background: red; */
}
.product-img image{
  height: 100%;
  width: 100%;
}
.yybtn{
  padding: 5rpx 18rpx;
  position: absolute;
  right: 25rpx;
  top: 25rpx;
  border:1px solid #06BEBC;
  color:#06BEBC;

}
.yybtn_ed{
  padding: 5rpx 18rpx;
  position: absolute;
  right: 25rpx;
  top: 25rpx;
  border:1px solid #06BEBC;
  color:#06BEBC;
}
.inputModel{
  height:556rpx;
  width:580rpx;
  position:fixed;
  left:50%;
  top:40%;
  background:#fff;
  margin-left:-290rpx;
  margin-top:-173rpx;
  z-index:100;
  border-radius: 20rpx; 
}
.model-title{
  line-height: 120rpx;
  text-align: center;
  display: block;
  font-size:32rpx;

}
.model-body{
  height: 75rpx;
  width: 77%;
  margin: 10px auto;
  border: 1px solid #e2e2e2;
  padding-left: 20rpx;

}
.model-footer{
  width: 100%;
  margin: 0 auto;
  border-top: 1px solid #e2e2e2;
  position: absolute;
  bottom: 0;
  left: 0;
  overflow: hidden;
}
.model-footer button{
  width: 50%;
  display: inline-block;
  box-sizing: border-box;
  line-height: 85rpx;
  text-align: center;
  font-size:30rpx;
  background: #fff;
  border: none;
  height: 100%;
}
button::after{
border:none;
}
.model-footer button:nth-child(1){
  border-right: 1px solid #e2e2e2;
}