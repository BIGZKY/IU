page{
  overflow: hidden;
}
.floor{
  padding: 18rpx 0;
  border-bottom: 1rpx solid #e2e2e2;
  margin-left: 15rpx;
  padding-right: 15rpx;
}
.floor:last-of-type{
  border-bottom: none;
  align-items: flex-start;
}
.floor>text{
  flex: 0 0 70px;
}
.floor>input,.floor>textarea{
  flex: 1
}
.floor>textarea{
  height: 82px;
  border: 1rpx solid #e2e2e2;
  padding: 8px;
  box-sizing: border-box;
}
.sbt{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  background: #06BEBC;
  font-size: 30rpx;
  border-radius: 0;
}
.addr{
  height: 100%;
  flex: 1;
}