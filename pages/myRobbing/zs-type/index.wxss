.container,page{
  height: 100%;
}
.swiper-tab {
  box-sizing: border-box;
  width: 100%;
  text-align: center;
  line-height: 90rpx;
  background-color:white;
  height: 90rpx;
  justify-content: flex-start;
}
.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 30%;
  color: #222;
  border-bottom: 2rpx solid #f2f2f2;
  margin:0 10%;
}
 
.on {
  color: #06BEBC;
  border-bottom: 2px solid #06BEBC;
}
 .free_delivery_wrap,.spec_delivery_wrap{
   overflow-y: scroll;
 }
 ::-webkit-scrollbar{
   width: 0;
   height: 0;
   background:transparent; 
 }

.content-wrap{
    padding-bottom: 20rpx;  
} 
.container>view{
  width: 100%;
}
.headerNav{
  background: #fff;
}
.headerNav text{
  width: 25%;
  line-height: 85rpx;
  font-size: 10pt;
  text-align: center;
}
.headerNav text.on{
  box-sizing: border-box;
  color: #e84f32;
  border-bottom: 2px solid #e84f32;
}

/* //专送样式 */
.spec_delivery_item{
  border: 1px solid #e9e9e9;
  background: #fff;
  width: 45%;
  padding: 15rpx;
  margin-left: 3.333%;
  margin-top: 25rpx;
  border-radius: 15rpx;
  box-sizing: border-box;
  height: 96px;
  box-shadow:0rpx 6rpx 10rpx #c4c4c4;

}
.spec_delivery_item image{
  height: 45rpx;
  width: 45rpx;
  margin: 0 20rpx;
}
.spec_delivery_item>view{
  height: 40px;
}
.spec_delivery_wrap{
  flex-wrap: wrap;
  align-items: flex-start;
  padding-bottom:15rpx;
  flex:1;

}