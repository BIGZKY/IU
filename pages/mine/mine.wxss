}
.userType{
  height:38rpx;
  background:#000;
  margin-top:20rpx;
  width:168rpx;
  padding-right:20rpx;
  box-sizing:border-box;
  border-radius:25rpx;
}
.userType text{
  font-size: 8pt;
  color: #fff;
}
.userType  image{
  width:54rpx;
  height:54rpx;
  margin-left:-10rpx;

}
