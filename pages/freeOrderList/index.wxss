page{
  height: 100%;
}
.container{
  background: #fff;   
     
}
.content-wrap{
    padding-bottom: 20rpx;  
} 
.container>view{
  width: 100%;
}
.headerNav{
  background: #fff;
}
.headerNav text{
  width: 25%;
  line-height: 85rpx;
  font-size: 10pt;
  text-align: center;
}
.headerNav text.on{
  box-sizing: border-box;
  color: #e84f32;
  border-bottom: 2px solid #e84f32;
}
.publish-info image{
  border-radius: 50%;
}
.task-item{
  width: 94%;
  margin: 0 auto;
  box-shadow: 0rpx 6rpx 10rpx #c4c4c4; 
  margin-top:25rpx;

}
.task-pic image{
  border-radius: 50%;
}
.task-item-header{
  background: #fff;
  padding: 15rpx 20rpx
}
.opreation{
  height: 90rpx;
  background: #fff;
  justify-content: flex-end;
}
.opreation text{
  line-height: 65rpx;
  color: #fff;
  width:150rpx;
  text-align:center;
  border-radius:10rpx;
  margin-right: 20rpx;
}
.robbing{
  background: #F76E36;
}
.task-info{
  padding:10rpx 20rpx 20rpx;
  height: 76px;
  border-bottom: 1px solid   #e9e9e9;
}
.task-pic image{
  height:58px;
  width:58px;
}
.task-pic>text{
  width: 61px;
  overflow:hidden; 
  text-overflow:ellipsis;
  text-align: center;
}
.task-pic text{
  margin-top:10rpx;
}
.task-detail-info{
  width: 100%;
  height: 100%;
  justify-content: space-between;
  align-items: flex-start;
  margin-left:45rpx;

}
.task-detail-info>view{
  width: 100%;
}
.distance-icon{
  height: 32rpx;
  width: 32rpx;
}
.distance-wrap{
  padding: 20rpx 20rpx;
  border-bottom: 1px solid   #e9e9e9;
}
.startAddr,.endAddr{
  align-items: flex-start;
}
.addr{
  margin-left: 10rpx;
  font-size:9pt;
  width: 87px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

}
.distance{
  margin-left:42rpx; 
  margin-top: 10rpx;
  color: #888;
  font-size:9pt;
}
.line{
  width:54rpx;
  height:2px;
  background:rgb(238, 171, 70);

}
.link {
  flex: 1;
  margin: 0 25rpx;

}
.note{
  width: 182px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left:10rpx;
  color:#888;
}